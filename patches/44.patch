-		: "=&r" (__orig), "=&r" (__res), "=&r" (__ex_flag)
-		: "r" (&count->counter)
-		: "cc", "memory" );
-	if (__orig)
-		smp_rmb();
-
-	return __orig;
-}
-
-#endif
